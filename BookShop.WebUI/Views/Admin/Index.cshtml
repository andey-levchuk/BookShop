@model IEnumerable<BookShop.Domain.Entities.Book>

@{
    ViewBag.Title = "Админ. панель: список книг";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h2>Список книг</h2>
    </div>
    <div class="panel-footer text-center" >
        @Html.ActionLink("Добавить книгу", "Create", null, new { @class = "btn btn-default" })
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название книги</th>
                <th>Автор</th>
                <th>Категория</th>
                <th class="text-right">Цена руб.</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.BookID)
                    </td>
                    <td>
                        "@Html.ActionLink(item.BookName, "Edit", new { item.BookID })"
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("BookId", item.BookID)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer text-center">
        @Html.ActionLink("Добавить книгу", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>


